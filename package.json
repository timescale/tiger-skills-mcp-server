{
  "name": "@tigerdata/tiger-skills-mcp-server",
  "version": "0.1.4",
  "description": "MCP server to provide an agent with skills",
  "license": "Apache-2.0",
  "author": "TigerData",
  "homepage": "https://tigerdata.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timescale/tiger-skills-mcp-server.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "mcpName": "io.github.timescale/tiger-skills",
  "type": "module",
  "bin": {
    "tiger-skills-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepublishOnly": "./bun run build",
    "watch": "./bun --watch src/index.ts",
    "start": "./bun src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "./bun x @biomejs/biome check",
    "inspector": "./bun x @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.0-beta.91",
    "@ai-sdk/mcp": "^1.0.0-beta.39",
    "@ai-sdk/openai": "^3.0.0-beta.104",
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^22.0.1",
    "@tigerdata/mcp-boilerplate": "^0.8.0",
    "@toon-format/toon": "^2.1.0",
    "ai": "^6.0.0-beta.159",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.4",
    "@types/node": "^22.19.2",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
