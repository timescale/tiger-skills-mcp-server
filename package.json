{
  "name": "@tigerdata/tiger-skills-mcp-server",
  "version": "0.1.4",
  "description": "MCP server to provide an agent with skills",
  "license": "Apache-2.0",
  "author": "TigerData",
  "homepage": "https://tigerdata.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timescale/tiger-skills-mcp-server.git"
  },
  "mcpName": "io.github.timescale/tiger-skills",
  "type": "module",
  "bin": {
    "tiger-skills-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsx watch src/index.ts http",
    "watch:stdio": "tsc --watch",
    "start": "node dist/index.js http",
    "start:stdio": "node dist/index.js stdio",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^22.0.1",
    "@tigerdata/mcp-boilerplate": "^0.8.0",
    "@toon-format/toon": "^2.1.0",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.2",
    "ai": "^5.0.108",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
